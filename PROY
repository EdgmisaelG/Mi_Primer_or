<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Enviar mensaje a Telegram Bot</title>
</head>
<body>
  <h2>Enviar mensaje al bot de Telegram</h2>
  <input type="text" id="mensaje" placeholder="Escribe tu mensaje">
  <button onclick="enviarMensaje()">Enviar</button>

  <script>
    function enviarMensaje() {
      const token = '8255331216:AAHjMtmUztHQL2HjoOr8Kuf3elsmlUFjBfw'; // ðŸ”’
      const chat_id = '1994731443';     // ðŸ†”
      const texto = document.getElementById('mensaje').value;

      const url = `https://api.telegram.org/bot${token}/sendMessage`;

      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          chat_id: chat_id,
          text: texto
        })
      })
      .then(response => response.json())
      .then(data => {
        console.log("Mensaje enviado:", data);
        alert("Mensaje enviado a Telegram");
      })
      .catch(error => {
        console.error("Error:", error);
        alert("Error al enviar el mensaje");
      });
    }
  </script>
</body>
</html>
